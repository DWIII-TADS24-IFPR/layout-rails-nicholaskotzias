<%= form_with(model: post, class: "w-full space-y-6") do |form| %>

  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-700 px-4 py-3 rounded-md border border-red-200">
      <h2 class="font-semibold mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="list-disc list-inside space-y-1">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block font-medium text-gray-700" %>
    <%= form.text_field :title, class: [
          "mt-2 block w-full rounded-md shadow-sm px-3 py-2 border focus:ring-2 focus:ring-blue-500 focus:outline-none",
          post.errors[:title].any? ? "border-red-400" : "border-gray-300"
        ] %>
  </div>

  <div>
    <%= form.label :body, class: "block font-medium text-gray-700" %>
    <%= form.text_area :body, rows: 6, class: [
          "mt-2 block w-full rounded-md shadow-sm px-3 py-2 border focus:ring-2 focus:ring-blue-500 focus:outline-none",
          post.errors[:body].any? ? "border-red-400" : "border-gray-300"
        ] %>
  </div>

  <div class="flex items-center space-x-3">
    <%= form.check_box :published, class: [
          "h-5 w-5 rounded border focus:ring-2 focus:ring-blue-500",
          post.errors[:published].any? ? "border-red-400" : "border-gray-300"
        ] %>
    <%= form.label :published, class: "text-gray-700 font-medium" %>
  </div>

  <div>
    <%= form.submit class: "w-full sm:w-auto bg-blue-600 hover:bg-blue-500 text-white font-medium px-4 py-2 rounded-md shadow-sm transition-colors duration-200 cursor-pointer" %>
  </div>

<% end %>
