<% content_for :title, "Showing Post" %>

<div class="md:w-2/3 w-full mx-auto mt-5 px-5">

  <% [:notice, :alert].each do |key| %>
    <% if flash[key] %>
      <p class="py-2 px-3 mb-5 rounded-md font-medium inline-block
        <%= key == :notice ? 'bg-green-50 text-green-500' : 'bg-red-50 text-red-500' %>">
        <%= flash[key] %>
      </p>
    <% end %>
  <% end %>

  <h1 class="text-4xl font-bold mb-5">Showing Post</h1>

  <div class="bg-white shadow-sm rounded-md p-6 mb-5">
    <h2 class="text-2xl font-semibold text-gray-800 mb-3"><%= @post.title %></h2>
    <p class="text-gray-700 mb-4"><%= @post.body %></p>
    <p class="text-gray-500 text-sm">Created at: <%= @post.created_at.strftime("%b %d, %Y") %></p>
    <% if @post.published %>
      <span class="inline-block mt-2 px-2 py-1 text-xs bg-green-100 text-green-800 font-medium rounded-full">Published</span>
    <% else %>
      <span class="inline-block mt-2 px-2 py-1 text-xs bg-gray-100 text-gray-600 font-medium rounded-full">Draft</span>
    <% end %>
  </div>

  <div class="flex flex-col sm:flex-row gap-2">
    <%= link_to "Edit this post", edit_post_path(@post),
        class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>

    <%= link_to "Back to posts", posts_path,
        class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>

    <%= button_to "Destroy this post", @post, method: :delete,
        form_class: "w-full sm:w-auto sm:inline-block",
        class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",
        data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
